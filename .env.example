###############################################
# Telegram Summarizer Bot - .env Example
# Copy this file to .env and fill in values
###############################################

# =====================
# Required
# =====================
# Telegram
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# Claude AI
ANTHROPIC_API_KEY=sk-ant-...

# =====================
# MongoDB
# =====================
# Pick ONE of the following, depending on your setup.

# 1) Local mongod on your machine (no auth):
#MONGODB_URL=mongodb://localhost:27017

# 2) Using this repo's docker-compose MongoDB from your host (auth enabled):
#   Credentials: admin / changeme_strong_password
#   Database: telegram_summarizer
#MONGODB_URL=mongodb://admin:changeme_strong_password@localhost:27017/telegram_summarizer?authSource=admin

# 3) Running the bot inside docker-compose (service name networking):
#   The compose already sets this value for the bot service.
#MONGODB_URL=mongodb://admin:changeme_strong_password@mongodb:27017/telegram_summarizer?authSource=admin

# 4) MongoDB Atlas (recommended for cloud):
#MONGODB_URL=mongodb+srv://<user>:<password>@<cluster-url>/telegram_summarizer?retryWrites=true&w=majority

MONGODB_DB_NAME=telegram_summarizer

# =====================
# Claude settings (optional)
# =====================
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=2048
CLAUDE_TIMEOUT=120

# =====================
# Bot behavior (optional)
# =====================
MAX_MESSAGE_BUFFER=50
MAX_SUMMARIES_PER_USER=5
DEFAULT_SUMMARY_COUNT=50

# =====================
# Application (optional)
# =====================
APP_ENV=development
LOG_LEVEL=INFO

# =====================
# Optional: Webhook/Hosting
# =====================
#RENDER_EXTERNAL_URL=
#PORT=8080

# ============================================
# Telegram Bot Configuration
# ============================================
# Get your bot token from @BotFather on Telegram
# Example: 123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here


# ============================================
# MongoDB Configuration
# ============================================
# Local MongoDB
MONGODB_URL=mongodb://localhost:27017

# Or MongoDB Atlas (cloud)
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Database name
MONGODB_DB_NAME=telegram_summarizer


# ============================================
# Claude AI Configuration
# ============================================
# Get your API key from https://console.anthropic.com/
# Example: sk-ant-api03-...
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude model (latest: claude-sonnet-4-5-20250929)
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Maximum tokens for Claude responses
CLAUDE_MAX_TOKENS=2048

# Timeout for Claude API calls (seconds)
CLAUDE_TIMEOUT=120


# ============================================
# Bot Behavior Settings
# ============================================
# Number of messages to keep in buffer
MAX_MESSAGE_BUFFER=50

# Maximum summaries to keep per user
MAX_SUMMARIES_PER_USER=5

# Default number of messages to summarize
DEFAULT_SUMMARY_COUNT=50


# ============================================
# Application Settings
# ============================================
# Environment: development, staging, production
APP_ENV=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO


# ============================================
# Optional: Deployment Settings (Render/Heroku)
# ============================================
# External URL for webhooks (leave empty for polling)
# RENDER_EXTERNAL_URL=https://your-app.onrender.com

# Port for webhook server
PORT=8080
